<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:viewmodels="clr-namespace:XFAccordion.ViewModels"
             xmlns:models="XFAccordion.Models"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
             x:Class="XFAccordion.MainPage"
             ios:Page.UseSafeArea="True"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>

        <StackLayout>
            <Label Text="Welcome to our store!" HorizontalTextAlignment="Center"></Label>
            <Button x:Name="btnInventory" Text="Check Inventory" Clicked="btnInventory_Clicked"></Button>
        </StackLayout>

    </ContentPage.Content>

</ContentPage>